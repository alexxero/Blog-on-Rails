<%= link_to 'Main page', articles_path %>
<br>

<h1><%= @article.title %></h1>

<h3>
  <%= @article.text %>
</h3>
<br>

<h4>Comments</h4>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author%><br/>
      <%= f.text_field :author%>
    </p>
    <p>
      <%= f.label :body%><br/>
      <%= f.text_area :body%>
    </p>
    <p>
      <%= f.submit 'Submit comment' %>
    </p>
  <% end %>
</p>

<% @comments.each do |comm| %>
    <p>
      <b>
        <%= comm.body %>
      </b>
    </p>
    <p> Posted by:
      <i>
        <%= comm.author %>
      </i>
    </p>
    <p>
      <small>
        <%= comm.created_at %>
      </small>
    </p>
    <br>
<% end %>