<h1>Articles</h1>

<% @articles.each do |a| %>

    <h3>
      <%= a.title %>
    </h3>
    <p>
    <%= a.text %>

    <p>
      <%= link_to 'Read more', article_path(a) %> |
      <%= link_to 'Edit', edit_article_path(a) %> |
      <%= link_to "Delete Message", a, method: :delete, data: {confirm: "You sure?"} %>
    </p>

    <hr>
  </p>
<% end %>